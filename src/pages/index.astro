---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";
import Content from "../components/Content.astro";
const someProps = {
    count: 0,
};
const pageTitle = "Home";

const baseAssetUrl = "https://craftzdog.global.ssl.fastly.net/uses";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout pageTitle={pageTitle}>
    <main class="pt-[60px]">
        <Content>
            <section
                class="relative mb-6 h-80 flex justify-center items-center"
            >
                <div class="z-10 text-center px-8 drop-shadow-xl shadow-black">
                    <div class="uppercase text-sm mb-4">Welcome to</div>
                    <div class="text-4xl font-mplus font-medium">
                        A short self introduction of <span
                            class="text-orange-500">me</span
                        >
                    </div>
                </div>
            </section>
        </Content>
    </main>
</BaseLayout>
